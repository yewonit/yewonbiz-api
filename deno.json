{
  "tasks": {
    "serve:dev": "deno run --allow-net --watch main.ts",
    "serve": "deno run --allow-net main.ts"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": []
  },
  "imports": {
    "oak": "https://deno.land/x/oak@v12.4.0/mod.ts",
    "oakCors": "https://deno.land/x/cors@v1.2.2/mod.ts",
    "gzip": "https://deno.land/std/compress/gzip.ts"
  }
}
